<TasksLogScreenView>:
    icon: 'book-open-outline'
    text: 'Tasks Log'

    data_table_cont: data_table_cont
    drop_item: drop_item

    MDBoxLayout:
        orientation: 'vertical'
        padding: 25, 25, 25, 25
        spacing: 10

        BoxLayout:
            size_hint_y: .15

            AnchorLayout:

                MDDropDownItem:
                    id: drop_item
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    on_release: root.task_types_menu.open()

            AnchorLayout:
                size_hint_x: .3

                TooltipMDIconButton:
                    icon: 'plus-circle-outline'
                    tooltip_text: 'Add task'
                    pos_hint: {"center_x": .5, "center_y": .5}
                    theme_icon_color: "Custom"
                    icon_color: 0, 141/255, 142/255, 1
                    on_release: root.adding_dialog.open()

        MDBoxLayout:
            id: data_table_cont

