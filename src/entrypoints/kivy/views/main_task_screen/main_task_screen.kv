#: import ak asynckivy


<MainTaskScreenView>:
    icon: 'shield-bug-outline'
    text: 'Main Page'

    negative_tasks_quantity: negative_tasks_quantity
    more_button: more_button
    cur_negative_title: cur_negative_title
    cur_negative_info_btn: cur_negative_info_btn
    next_negative_btn: next_negative_btn
    cur_task_title: cur_task_title
    froze_btn: froze_btn
    skip_btn: skip_btn
    accept_btn: accept_btn

    MDBoxLayout:
        orientation: 'vertical'

        MDCard:
            size_hint_y: .12
            md_bg_color: 76/255, 31/255, 124/255, 1
            radius: 0
            padding: 10

            MDCard:
                style: 'outlined'
                size_hint_x: .3
                md_bg_color: 0, 141/255, 142/255, 1

                MDLabel:
                    id: negative_tasks_quantity
                    text: '10'
                    font_style: 'Button'
                    halign: 'center'
                    valign: 'center'
                    outline_color: 189/255, 50/255, 47/255, 1
                    outline_width: 2
                    theme_text_color: "Custom"
                    text_color: 204/255, 191/255, 0, 1

            MDLabel:
                id: cur_negative_title
                halign: 'center'
                valign: 'center'
                text: 'Negative (title) ...'
                theme_text_color: "Custom"
                text_color: 0, 141/255, 142/255, 1
                font_style: 'H5'
                bold: True

            MDIconButton:
                id: cur_negative_info_btn
                size_hint_x: .2
                icon: 'information-outline'
                pos_hint: {"center_x": .5, "center_y": .5}
                theme_icon_color: "Custom"
                icon_color: 204/255, 191/255, 0, 1

            MDIconButton:
                id: next_negative_btn
                size_hint_x: .2
                icon: 'arrow-right-bold-circle-outline'
                pos_hint: {"center_x": .5, "center_y": .5}
                theme_icon_color: "Custom"
                icon_color: 189/255, 50/255, 47/255, 1

        BoxLayout:
            orientation: 'vertical'
            padding: 25, 25, 25, 25

            AnchorLayout:

                MDLabel:
                    id: cur_task_title
                    halign: 'center'
                    valign: 'center'
                    text: 'Title (main)'
                    theme_text_color: "Custom"
                    text_color: 0, 141/255, 142/255, 1
                    font_style: 'H3'
                    bold: True

            AnchorLayout:

                MDRaisedButton:
                    id: more_button
                    text: 'more'
                    md_bg_color: 76/255, 31/255, 124/255, 1
                    font_style: 'Button'
                    on_release: root.tap_target_start()

            BoxLayout:
                size_hint_y: .3

                AnchorLayout:

                    MDIconButton:
                        id: froze_btn
                        icon: 'snowflake'
                        icon_size: "38sp"
                        md_bg_color: 204/255, 191/255, 0, .3
                        theme_icon_color: "Custom"
                        icon_color: 66/255, 170/255, 1, 1
                        on_release: ak.start(root.controller.mark_task_as_frozen(root.current_task.item_id))

                AnchorLayout:

                    MDIconButton:
                        id: skip_btn
                        icon: 'debug-step-over'
                        icon_size: "38sp"
                        md_bg_color: 204/255, 191/255, 0, .3
                        theme_icon_color: "Custom"
                        icon_color: 76/255, 31/255, 124/255, 1
                        on_release: ak.start(root.controller.get_main_task(root.current_task.place))

                AnchorLayout:

                    MDIconButton:
                        id: accept_btn
                        icon: 'check-outline'
                        icon_size: "38sp"
                        md_bg_color: 204/255, 191/255, 0, .3
                        theme_icon_color: "Custom"
                        icon_color: 0, 141/255, 142/255, 1
                        on_release: ak.start(root.controller.mark_task_as_done(root.current_task.item_id))
